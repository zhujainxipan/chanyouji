<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".DetailTravelActivity">



       <se.emilsjolander.stickylistheaders.StickyListHeadersListView
           android:id="@+id/list"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:cacheColorHint="#00000000"
           android:divider="#00000000"
           android:dividerHeight="0dp"
           android:background="#fff"
           />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/header"
        >
        <com.chanyouji.chanyouji.ui.widget.KenBurnsView
            android:id="@+id/header_picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingBottom="58dp"
            >
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/thumbnail_a_default"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/head_detail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/user_icon"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="13dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/head_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/user_icon"
                android:layout_above="@id/head_detail"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="15dp"
                />



        </RelativeLayout>

    </FrameLayout>

</FrameLayout>






